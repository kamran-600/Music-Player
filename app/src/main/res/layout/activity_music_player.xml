<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MusicPlayerActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mustafa Jane Rehmat Pe Salam"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="40dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/music"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:progressBackgroundTint="@color/white"
        android:layout_marginHorizontal="40dp"/>
    
    <TextView
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:text="10:00"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/pausePlayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:src="@drawable/pause"/>

    <ImageView
        android:id="@+id/prevBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/pausePlayBtn"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/previous"/>

    <ImageView
        android:id="@+id/prev5secBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/prevBtn"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="35dp"
        android:tint="@color/white"
        android:src="@drawable/prev5sec"/>

    <ImageView
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/pausePlayBtn"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/next"/>

    <ImageView
        android:id="@+id/next5secBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/nextBtn"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="35dp"
        android:tint="@color/white"
        android:src="@drawable/next5sec"/>










</RelativeLayout>